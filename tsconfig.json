{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["react", "react-dom", "react-native-web"] // Updated types
  },
  "include": ["src"]
}
